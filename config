# font
font-size=16
font-family = BerkeleyMono Nerd Font

# theme
theme = mellow
background-opacity = 0.8

# mouse
mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

# keybinds new split
keybind = cmd+up=new_split:up
keybind = cmd+down=new_split:down
keybind = cmd+left=new_split:left

# keybinds resize split
keybind = cmd+right=new_split:right
keybind = shift+cmd+up=resize_split:up,20
keybind = shift+cmd+down=resize_split:down,20
keybind = shift+cmd+left=resize_split:left,20
keybind = shift+cmd+right=resize_split:right,20
